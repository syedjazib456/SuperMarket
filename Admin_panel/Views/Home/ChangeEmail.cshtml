@model Admin_panel.Models.Data.ApplicationUser
@{
    ViewData["Title"] = "ChangeEmail";
    
}



<head>
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/css/ofiicecss.css" rel="stylesheet" />


</head>
<body class="gradient-custom-4">
    <section class="bg-image gradient-custom-4">
        <div class="mask d-flex align-items-center  gradient-custom-3">
            <div class="container mt-4">
                <div class="row d-flex justify-content-center align-items-center ">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h2>Change Your Email.</h2>
                                <hr />
                                @if (TempData["msg"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong>@TempData["msg"]</strong>
                                      @*   <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button> *@
                                    </div>
                                }

                                <form asp-action="ChangeEmail" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div asp-validation-summary="All" class="text-danger"></div>
                                 
                                    
                                          
                                 
                                        <div class="form-floating">
                                            <input asp-for="Email" class="form-control"  />
                                            <label asp-for="Email" class="form-label">Current Email</label>
                                         
                                        </div>
                                    
                                    <div class="form-outline mb-4 mt-2">
                                        <input asp-for="new_email" class="form-control" autocomplete="email" aria-required="true" />
                                        <label asp-for="new_email" class="form-label">New Email</label>
                                        <span asp-validation-for="new_email" class="text-danger"></span>
                                    </div>


                                    <div class="d-flex justify-content-center">
                                        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-success btn-block  gradient-custom-4 text-body">Change Email</button>

                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




    

</body>
</html>